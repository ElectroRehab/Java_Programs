package m4hw1;
// Imported Plug-Ins Information
import java.util.Scanner;
import java.text.NumberFormat;
// Start program
public class M4HW1 {
    // main() Module
    public static void main(String[] args) {
        // Declare the formatting type for program.
        NumberFormat formatter = NumberFormat.getInstance();
        formatter.setMaximumFractionDigits(2);
        formatter.setMinimumFractionDigits(0);
        // Declare Variables
        double vehSpeed = 60, time5 = 5, time8 = 8, time12 = 12, viewPsu;
        // Scanner Keyboard for user interface input
        Scanner keyboard = new Scanner(System.in);
        // Ask the user to enter amount of tickets sold 
        // Display the speed a car is traveling
        System.out.println("If a car is traveling 60 Miles Per Hour (MPH):");
        System.out.print("1) In 5 hours, you will have traveled ");
        // Calculation of the speed and the time traveled in 5 hours.
        System.out.print(formatter.format(vehSpeed * time5));
        System.out.print(" miles.");
        System.out.println("");
        System.out.print("2) In 8 hours, you will have traveled ");
        // Calculation of the speed and the time traveled in 8 hours.
        System.out.print(formatter.format(vehSpeed * time8));
        System.out.print(" miles.");
        System.out.println("");
        System.out.print("3) In 12 hours, you will have traveled ");
        // Calculation of the speed and the time traveled in 12 hours.
        System.out.print(formatter.format(vehSpeed * time12));
        System.out.print(" miles.");
        System.out.println("");
        // Pseudocode Display Prompt
        System.out.print("Enter any number to view program's pseudocode: ");
        // Variable 'viewPsu' used for user input
        viewPsu = keyboard.nextDouble();
        // Ensure proper calculation for 'If & Else Statements'. 
        viewPsu = viewPsu * 0;
        if (viewPsu == 0) {
            displayPseudocode();
        }
        else{
            displayPseudocode();
        }
    }
